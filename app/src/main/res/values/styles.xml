<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CheckBoxGreenTheme">
        <item name="colorAccent">@color/light_green_500</item>
    </style>

    <style name="DialogButtons.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MyEditTextTheme.Light" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="MyEditTextTheme.Dark" parent="@android:style/TextAppearance">
        <item name="backgroundTint">@color/teal_500</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
